#widget{:style=>"margin-bottom: 10px"}
  %h4= link_to "Edit", [:edit, @product, @product.widget]
  .accordion
    %h3= link_to "Behavior", '#'
    %div
      %table
        %tr
          %td Embed Code
          %td= text_area_tag :embed, @product.embed_code, :readonly=>true, :style=>'width: 95%; height: 50px'
        %tr
          %td Layout
          %td= @widget.embedded? ? "Embed on page" : "Show on click"
        %tr
          %td Title
          %td= @widget.title
    %h3= link_to "Layout", '#'
    %div
      %p= @widget.content
    %h3= link_to "Preview", '#'
    %div
      = link_to "See Demo", [:demo, @product], :target=>"_new_window"