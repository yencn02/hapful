= content_header "Products"

= will_paginate @products
.table
  %table
    %tr
      %th Name
      %th URL
      %th State
      %th Behavior
      %th Options
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.post_url
        %td= product.state
        %td= product.use_hapful? ? 'Uses Hapful' : 'External link'
        %td
          - if !product.state.eql?('deleted')
            = link_to "Delete", admin_product_path(product), :method=>:delete, :confirm=>"Are you sure?"
    