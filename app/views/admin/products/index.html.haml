= content_header "Products"

.table
  %table
    %tr
      %th Name
      %th URL
      %th State
      %th Options
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.post_url
        %td= product.state
        %td= link_to "Delete", admin_product_path(product), :method=>:delete, :confirm=>"Are you sure?"